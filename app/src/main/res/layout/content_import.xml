<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_import" tools:context="com.example.beequiet.ImportActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMPORT FROM CALENDAR"
        android:id="@+id/buttonCalendar"
        android:layout_above="@+id/buttonSchedule"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:onClick="clickCalendar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMPORT FROM EXTERNAL SCHEDULE"
        android:id="@+id/buttonSchedule"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="clickExternal" />
</RelativeLayout>
